---

import { Icon } from "astro-icon/components";
interface Props {
    text: string;
    link: string;
    icon: string;
}

let { link, icon, text} = Astro.props;

---
<div class="flex flex-row content-center">
    <div class="p-4 rounded-full bg-green-50/75 shadow-lg">
        <Icon name={icon} size="20px"/>
    </div>
    <p class="pl-2 py-3 text-lg">
        <a href={link}>{text}</a>
    </p>
</div>