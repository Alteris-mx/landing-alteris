---
import { Icon } from "astro-icon/components";
interface Props {
    title: string;
    content: string;
    icon: string;
}

let { title, icon, content} = Astro.props;
---



<section
    class=`py-6  md:px-4 z-1 rounded-lg bg-green-100 shadow-lg flex flex-col justify-center items-center min-h-[100px]  lg:max-xl:h-[330px] mx-5 2xl:gap-2`
>
    <div class="min-h-12">
        <Icon name={icon} class="text-4xl 2xl:text-6xl"/>
    </div>
    <h1 class="py-2 text-lg max-2xl:font-semibold text-center 2xl:text-xl">{title}</h1>

    <p class="w-2/3 text-center text-sm sm:text-base text-gray-600 2xl:text-lg">{content}</p>
    <slot name="b-content" />
</section>
