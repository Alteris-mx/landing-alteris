---
import { Icon } from "astro-icon/components";
interface Props {
    title: string;
    content: string;
    icon: string;
}

let { title, icon, content} = Astro.props;
---

<section
    class=`py-6 md:px-5 z-1 rounded-lg bg-green-100 shadow-lg flex flex-col justify-center items-center min-h-[100px]  lg:max-xl:h-[330px]`
>
    <div class="min-h-12">
        <Icon name={icon} size="40px"/>
    </div>
    <h1 class="py-2 text-lg font-bold text-center">{title}</h1>

    <p class="w-2/3 text-center">{content}</p>
    <slot name="b-content" />
</section>
