---
import iconWhite from "../assets/images/black.png";
import logoWhite from "../assets/images/text_bg.png";
import iconBlack from "../assets/images/green.png";
import logoBlack from "../assets/images/text_wg.png";
import "../assets/styles/navbar.css";
import { Image } from "astro:assets";

---

<header
        class="fixed top-0 inset-0 h-16 z-50 border-b border-slate-100 bg-white/80 backdrop-blur-lg"
>
    <nav
            class="mx-auto flex max-w-6xl gap-8 px-6 transition-all duration-200 ease-in-out lg:px-12 py-4"
    >
        <div class="relative flex items-center" id="logo">
            <Image
                    src={iconWhite}
                    loading="lazy"
                    width="32"
                    class=""
                    height="32"
                    alt="alteris logo"
            />
            <Image
                    src={logoWhite}
                    loading="lazy"
                    class="object-contain pl-2"
                    width="100"
                    alt="alteris brand"
            />
        </div>
        <ul class="hidden items-center justify-center gap-6 md:flex">
            <li class="pt-1.5 font-dm text-sm font-medium text-slate-700">
                <a href="#hero">Inicio</a>
            </li>
            <li class="pt-1.5 font-dm text-sm font-medium text-slate-700">
                <a href="#identity">¿Quiénes somos?</a>
            </li>
            <li class="pt-1.5 font-dm text-sm font-medium text-slate-700">
                <a href="#clients">Clientes</a>
            </li>
            <li class="pt-1.5 font-dm text-sm font-medium text-slate-700">
                <a href="#projects">Portafolio</a>
            </li>
            <li class="pt-1.5 font-dm text-sm font-medium text-slate-700">
                <a href="#contact">Contacto</a>
            </li>
        </ul>
        <div class="grow"></div>
        <div class="hidden items-center justify-center gap-6 md:flex">
            <a
                    href="#contact"
                    class="rounded-md bg-gradient-to-br from-green-600 to-emerald-400 px-3 py-1.5 font-dm text-sm font-medium text-white shadow-md shadow-green-400/50 transition-transform duration-200 ease-in-out hover:scale-[1.03]"
            >Contáctanos
            </a>
        </div>
        <div class="relative flex items-center justify-center md:hidden">
            <div class="menu-bg" id="menu-bg"></div>
            <div id="menu">
                <div id="menu-bar" >
                    <div id="bar1" class="bar"></div>
                    <div id="bar2" class="bar"></div>
                    <div id="bar3" class="bar"></div>
                </div>
                <div class="nav" id="nav">
                    <ul>
                        <li>
                            <a href="#hero">Inicio</a>
                        </li>
                        <li><a href="#identity">¿Quiénes somos?</a></li>
                        <li><a href="#clients">Clientes</a></li>
                        <li><a href="#projects">Portafolio</a></li>
                        <li><a href="#contact">Contacto</a></li>
                    </ul>
                </div>
                
            </div>
        </div>
    </nav>
</header>


<script>
     const menu = document.getElementById("menu-bar");


     function toggleNavbar(){
        document.getElementById("menu-bar").classList.toggle("change");
        document.getElementById("nav").classList.toggle("change");
        document.getElementById("menu-bg").classList.toggle("change-bg");
        document.getElementById("logo").classList.toggle("hidden");
     }
     
     menu.addEventListener('click', toggleNavbar);

    
    document.getElementById('nav').addEventListener('click', toggleNavbar)



</script>
