---
interface Props {
    title?: string;
    subtext?: string;
    id?: string;
}

let { title, subtext, id } = Astro.props;
import { Fade } from "react-awesome-reveal";
---

<section
    id={id}
    class="py-16 min-h-[100vh] md:px-10 z-1 rounded bg-green-300/50 flex flex-col justify-center text-center items-center"
>
    <Fade cascade={true} client:load>
        {
            title && (
                <>
                    <h1 class="text-4xl 2xl:text-6xl text-center">{title}</h1>
                </>
            )
        }
        {
            subtext && (
                <>
                    <p class="p-3 text-center 2xl:text-2xl text-gray-600">{subtext}</p>
                </>
            )
        }
        <slot name="b-content" />
    </Fade>
</section>
